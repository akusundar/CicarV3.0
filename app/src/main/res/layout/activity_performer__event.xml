<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_performer__event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs7.chinmays.cicarv30.Performer_Event">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:id="@+id/event_name" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_venue_data"
        android:layout_alignLeft="@+id/event_venue"
        android:layout_alignStart="@+id/event_venue"
        android:layout_marginTop="62dp"
        android:id="@+id/event_time" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_done"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/event_time_data"
        android:layout_toEndOf="@+id/event_time_data"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="39dp"
        android:onClick="home"
        android:id="@+id/floatingActionButton"
        app:backgroundTint="@android:color/holo_blue_dark" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_data"
        android:layout_alignBaseline="@+id/event_name"
        android:layout_alignBottom="@+id/event_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="106dp"
        android:layout_marginEnd="106dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_time_data"
        android:layout_alignBaseline="@+id/event_time"
        android:layout_alignBottom="@+id/event_time"
        android:layout_alignLeft="@+id/event_venue_data"
        android:layout_alignStart="@+id/event_venue_data" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_date_data"
        android:layout_alignBaseline="@+id/event_date"
        android:layout_alignBottom="@+id/event_date"
        android:layout_alignLeft="@+id/event_time_data"
        android:layout_alignStart="@+id/event_time_data" />

    <TextView
        android:text="Venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/event_venue"
        android:layout_below="@+id/event_name"
        android:layout_alignLeft="@+id/event_name"
        android:layout_alignStart="@+id/event_name" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_venue_data"
        android:layout_alignBaseline="@+id/event_venue"
        android:layout_alignBottom="@+id/event_venue"
        android:layout_alignLeft="@+id/event_name_data"
        android:layout_alignStart="@+id/event_name_data" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/event_date"
        android:layout_below="@+id/event_time"
        android:layout_alignLeft="@+id/event_time"
        android:layout_alignStart="@+id/event_time" />

</RelativeLayout>
